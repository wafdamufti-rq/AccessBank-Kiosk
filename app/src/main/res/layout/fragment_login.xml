<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/background_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:text="Enter your account no."
        android:textAppearance="?textAppearanceHeadline2"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_top_title"
        android:textSize="@dimen/title_text_size"
        android:textFontWeight="800"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <com.google.android.material.textfield.TextInputLayout
        app:layout_constraintTop_toBottomOf="@id/title"
        android:id="@+id/text_input_account_number"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/input_number_layout"
        app:layout_constraintVertical_bias="0.1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@color/white"
        android:paddingHorizontal="20dp"
        app:shapeAppearance="@style/shapeAppearanceRoundedMedium"
        app:hintEnabled="false"
        android:layout_height="@dimen/height_input_form">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:focusable="false"
            android:hint="@string/hint_account_number"
            android:textAlignment="center"
            android:textColorHint="@color/grey"
            android:textAppearance="?textAppearanceHeadline2"
            android:textSize="@dimen/button_bottom_text_size"
            android:focusedByDefault="false"
            android:focusableInTouchMode="false"
            android:clickable="false"
            android:inputType="none"
            android:layout_height="match_parent"/>
    </com.google.android.material.textfield.TextInputLayout>


    <include android:id="@+id/input_number_layout" android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_input_account_number"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content" layout="@layout/layout_number_input"/>



</androidx.constraintlayout.widget.ConstraintLayout>