<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/button_one"
        android:layout_width="@dimen/width_input_number"
        android:layout_height="@dimen/height_input_number"
        android:text="1"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_input_number"

        android:textAppearance="?textAppearanceHeadline2"
        app:shapeAppearance="@style/shapeAppearanceRoundedMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_two"
        android:text="2"
        app:shapeAppearance="@style/shapeAppearanceRoundedMedium"
        android:layout_width="@dimen/width_input_number"
        android:layout_height="@dimen/height_input_number"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_input_number"
        android:textAppearance="?textAppearanceHeadline2"
        android:layout_marginHorizontal="@dimen/margin_input_number"

        app:layout_constraintEnd_toStartOf="@id/button_three"
        app:layout_constraintStart_toEndOf="@id/button_one"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_three"
        android:text="3"
        app:shapeAppearance="@style/shapeAppearanceRoundedMedium"
        android:layout_width="@dimen/width_input_number"
        android:layout_height="@dimen/height_input_number"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_input_number"

        android:textAppearance="?textAppearanceHeadline2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_four"
        android:text="4"
        app:shapeAppearance="@style/shapeAppearanceRoundedMedium"
        android:layout_width="@dimen/width_input_number"
        android:layout_height="@dimen/height_input_number"
        android:layout_marginVertical="@dimen/margin_input_number"

        android:backgroundTint="@color/white"
        android:textSize="@dimen/text_size_input_number"

        android:textColor="@color/black"
        android:textAppearance="?textAppearanceHeadline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_one" />

    <Button
        android:id="@+id/button_five"
        android:text="5"
        app:shapeAppearance="@style/shapeAppearanceRoundedMedium"
        android:layout_width="@dimen/width_input_number"
        android:layout_height="@dimen/height_input_number"
        android:layout_marginVertical="@dimen/margin_input_number"

        android:textSize="@dimen/text_size_input_number"

        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textAppearance="?textAppearanceHeadline2"
        app:layout_constraintEnd_toStartOf="@id/button_six"
        app:layout_constraintStart_toEndOf="@id/button_four"
        app:layout_constraintTop_toBottomOf="@id/button_one" />

    <Button
        android:id="@+id/button_six"
        android:text="6"
        app:shapeAppearance="@style/shapeAppearanceRoundedMedium"
        android:layout_width="@dimen/width_input_number"
        android:layout_height="@dimen/height_input_number"
        android:layout_marginVertical="@dimen/margin_input_number"

        android:textSize="@dimen/text_size_input_number"

        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textAppearance="?textAppearanceHeadline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_one" />

    <Button
        android:id="@+id/button_seven"
        android:text="7"
        app:shapeAppearance="@style/shapeAppearanceRoundedMedium"
        android:layout_width="@dimen/width_input_number"
        android:layout_height="@dimen/height_input_number"
        android:layout_marginVertical="@dimen/margin_input_number"

        android:textSize="@dimen/text_size_input_number"

        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textAppearance="?textAppearanceHeadline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_four" />

    <Button
        android:id="@+id/button_eight"
        android:text="8"
        app:shapeAppearance="@style/shapeAppearanceRoundedMedium"
        android:layout_width="@dimen/width_input_number"
        android:layout_height="@dimen/height_input_number"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/margin_input_number"

        android:textSize="@dimen/text_size_input_number"

        android:textAppearance="?textAppearanceHeadline2"
        app:layout_constraintEnd_toStartOf="@id/button_nine"
        app:layout_constraintStart_toEndOf="@id/button_seven"
        app:layout_constraintTop_toBottomOf="@id/button_four" />

    <Button
        android:id="@+id/button_nine"
        android:text="9"
        android:layout_width="@dimen/width_input_number"
        android:layout_height="@dimen/height_input_number"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/margin_input_number"
        android:textSize="@dimen/text_size_input_number"

        android:textAppearance="?textAppearanceHeadline2"
        app:shapeAppearance="@style/shapeAppearanceRoundedMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_four" />

    <Button
        android:id="@+id/button_zero"
        android:text="0"
        app:shapeAppearance="@style/shapeAppearanceRoundedMedium"
        android:layout_width="0dp"
        android:layout_height="@dimen/height_input_number"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/margin_input_number"

        android:textSize="@dimen/text_size_input_number"

        android:textAppearance="?textAppearanceHeadline2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/button_eight"
        app:layout_constraintTop_toBottomOf="@id/button_seven" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_back"
        app:icon="@drawable/outline_backspace_24"
        app:iconTint="@color/black"
        app:iconGravity="textStart"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginVertical="@dimen/margin_input_number"

        android:textSize="@dimen/text_size_input_number"

        android:textAppearance="?textAppearanceHeadline2"
        app:iconSize="@dimen/margin_default"
        app:shapeAppearance="@style/shapeAppearanceRoundedMedium"
        android:layout_width="@dimen/width_input_number"
        android:layout_height="@dimen/height_input_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_seven" />



</androidx.constraintlayout.widget.ConstraintLayout>