<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/background_content"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_fingerprint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:textAppearance="?textAppearanceHeadline2"
            android:textSize="76dp"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/title_fingerprint"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/place_you_fingerprint" />

        <com.google.android.material.card.MaterialCardView
            android:id="@id/card_fingerprint"
            android:layout_width="470dp"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="130dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_fingerprint"
            android:layout_height="470dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/fingerprint"
                android:layout_width="235dp"
                android:layout_height="235dp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_fingerprint"
            style="@style/MyTheme.Progress.Horizontal"
            android:layout_width="470dp"
            android:layout_height="15dp"

            android:layout_marginTop="120dp"
            android:indeterminate="false"
            android:progress="60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_fingerprint" />

        <TextView
            android:id="@+id/text_progress_fingerprint"
            app:layout_constraintTop_toBottomOf="@id/progress_fingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:textAppearance="?textAppearanceHeadline3"
            android:textColor="@color/white"
            android:text="Please Wait"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_facial"
            style="@style/MyTheme.Button.Outline"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.7"
            android:layout_height="150dp"
            android:layout_marginBottom="100dp"
            android:text="@string/facial_recognition_all_cap"
            app:icon="@drawable/ic_facial"
            app:iconPadding="0dp"
            app:iconTint="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_facial"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceHeadline2"
            android:textSize="76dp"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Please look at the camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



        <FrameLayout
            android:id="@+id/layout_preview"
            android:layout_width="470dp"
            android:layout_marginTop="130dp"
            android:layout_height="470dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.camera.view.PreviewView
                android:id="@+id/preview"
                android:layout_width="470dp"
                android:layout_height="470dp" />

            <com.kiosk.accessbank.camerax.GraphicOverlay
                android:id="@+id/graphicOverlay_finder"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_facial"
            style="@style/MyTheme.Progress.Horizontal"
            android:layout_width="470dp"
            android:layout_height="15dp"

            android:layout_marginTop="120dp"
            android:indeterminate="false"
            android:progress="60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_preview" />

        <TextView
            android:id="@+id/text_progress_facial"
            app:layout_constraintTop_toBottomOf="@id/progress_facial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp"
            android:textAppearance="?textAppearanceHeadline3"
            android:textColor="@color/white"
            android:text="Please Wait"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_fingerprint"
            style="@style/MyTheme.Button.Outline"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.7"
            android:layout_height="150dp"
            android:layout_marginBottom="100dp"
            android:text="FINGERPRINT"
            app:iconSize="80dp"
            app:icon="@drawable/fingerprint"
            app:iconPadding="10dp"
            app:iconTint="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>