<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@drawable/background_content"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_fingerprint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:textAppearance="?textAppearanceHeadline2"
            android:textSize="@dimen/title_text_size"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_top_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:id="@+id/title_fingerprint"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/place_you_fingerprint" />

        <com.google.android.material.card.MaterialCardView
            android:id="@id/card_fingerprint"
            android:layout_width="@dimen/width_card_verify"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="@dimen/margin_top_verify"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_fingerprint"
            android:layout_height="@dimen/width_card_verify">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/fingerprint"
                android:layout_width="@dimen/icon_card_verify_size"
                android:layout_height="@dimen/icon_card_verify_size"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_fingerprint"
            style="@style/MyTheme.Progress.Horizontal"
            android:layout_width="@dimen/width_card_verify"
            android:layout_height="@dimen/height_progress_indicator"

            android:layout_marginTop="@dimen/margin_top_progress_indicator_verify"
            android:indeterminate="false"
            android:progress="60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_fingerprint" />

        <TextView
            android:id="@+id/text_progress_fingerprint"
            app:layout_constraintTop_toBottomOf="@id/progress_fingerprint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_default"
            android:textAppearance="?textAppearanceHeadline3"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_progress_indicator"
            android:text="Please Wait"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_facial"
            style="@style/MyTheme.Button.Outline"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.7"
            android:layout_height="@dimen/height_input_number"
            android:layout_marginBottom="@dimen/margin_top_title"
            android:text="@string/facial_recognition_all_cap"
            app:icon="@drawable/ic_facial"
            app:iconPadding="0dp"
            android:textSize="@dimen/button_bottom_text_size"
            app:iconSize="@dimen/icon_size_button"
            app:iconTint="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingStart="@dimen/margin_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_facial"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/title_facial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceHeadline2"
            android:textSize="@dimen/title_text_size"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/margin_top_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Please look at the camera"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />



        <FrameLayout
            android:id="@+id/layout_preview"
            android:layout_width="@dimen/width_card_verify"
            android:layout_marginTop="@dimen/margin_top_verify"
            android:layout_height="@dimen/width_card_verify"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_facial">

            <androidx.camera.view.PreviewView
                android:id="@+id/preview"
                android:layout_width="@dimen/width_card_verify"
                android:layout_height="@dimen/width_card_verify" />


        </FrameLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_facial"
            style="@style/MyTheme.Progress.Horizontal"
            android:layout_width="@dimen/width_card_verify"
            android:layout_height="@dimen/height_progress_indicator"

            android:layout_marginTop="@dimen/margin_top_progress_indicator_verify"
            android:indeterminate="false"
            android:progress="60"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_preview" />

        <TextView
            android:id="@+id/text_progress_facial"
            app:layout_constraintTop_toBottomOf="@id/progress_facial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/text_size_progress_indicator"
            android:layout_marginTop="@dimen/margin_default"
            android:textAppearance="?textAppearanceHeadline3"
            android:textColor="@color/white"
            android:text="Please Wait"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_fingerprint"
            style="@style/MyTheme.Button.Outline"
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.7"
            android:layout_height="@dimen/height_input_number"
            android:layout_marginBottom="@dimen/margin_top_title"
            android:text="FINGERPRINT"
            app:iconSize="@dimen/icon_size_button"
            app:icon="@drawable/fingerprint"
            app:iconPadding="10dp"
            android:textSize="@dimen/button_bottom_text_size"
            app:iconTint="@color/grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>